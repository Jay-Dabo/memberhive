{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "./",
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "dist",
    "genDir": "src/locale",
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "jasmine"
    ],
    "baseUrl": "./src",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "test.ts"
  ]
}
