{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "./",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs"
    ],
    "baseUrl": "./web",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "angularCompilerOptions": {
    "genDir": "web/locale",
    "skipMetadataEmit" : true
  },
  "files": [
    "web/app/app.module.ts",
    "web/main.ts"
  ],
  "exclude": [
    "test.ts",
    "node_modules",
    "dist",
    "web/polyfills.ts"
  ]
}
